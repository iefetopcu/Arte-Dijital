@model ArteDijital.Models.Entity.usertable
@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/Admin.cshtml";
}

@using (Html.BeginForm("ProfilDuzenle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-4">
            <div class="card card-small mb-4 pt-3">
                <div class="card-header border-bottom text-center">
                    <div class="mb-3 mx-auto">

                        <img class="rounded-circle" src="@Model.userphotourl" alt="User Avatar" width="110">
                        <span class="text-muted d-block mb-2">Fotoğrafı Değiştir</span>
                        <input type="file" name="userphotourl" /><br />

                    </div>
                    <hr />
                    <h4 class="mb-0"></h4>
                    <span class="text-muted d-block mb-2">@Model.userrole.userrolename</span>
                </div>

            </div>
        </div>
        <div class="col-lg-8">
            <div class="card card-small mb-4">
                <div class="card-header border-bottom">
                    <h6 class="m-0">Hesap Düzenle</h6>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-3">
                        <div class="row">
                            <div class="col">

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="feFirstName">Ad</label>
                                        @Html.TextBoxFor(m => m.username, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="feLastName">Soyad</label>
                                        @Html.TextBoxFor(m => m.usersurname, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="feEmailAddress">E - Mail</label>
                                        @Html.TextBoxFor(m => m.useremail, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="fePassword">Şifre</label>
                                        @Html.TextBoxFor(m => m.userpassword, new { @class = "form-control" , @type = "password"})
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="feInputAddress">Nick</label>
                                    @Html.TextBoxFor(m => m.usernick, new { @class = "form-control" })
                                </div>


                                <button type="submit" class="btn btn-accent">Güncelle</button>

                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
}