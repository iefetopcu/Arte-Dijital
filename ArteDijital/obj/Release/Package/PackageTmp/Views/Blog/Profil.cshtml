@model ArteDijital.Models.Entity.usertable
@{
    
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/BlogView.cshtml";
}

@using (Html.BeginForm("ProfilDuzenle", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <section class="contact-form-wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="section-title text-center">
                        <h2 class="text-md mb-2">Güncelle</h2>
                        <div class="divider mx-auto my-4"></div>
                    </div>
                </div>
            </div>
            @if (ViewBag.alert == "mail")
            {
                <div class="alert alert-danger" role="alert">
                    Bu mail adresi kayıtlıdır !
                </div>
            }
            <div class="row">
                <div class="col-lg-6">
                    <img class="rounded-circle" src="@Model.userphotourl" alt="User Avatar" width="110">

                    <span class="text-muted d-block mb-2">Fotoğrafı Değiştir</span>
                    <input type="file" name="userphotourl" /><br /><br />
                </div>
                <div class="col-lg-3">
                    <h5>İsim Soyisim : </h5>
                    <h5>Nick : </h5>
                    <h5>E-Mail : </h5>
                </div>
                <div class="col-lg-3">
                    <h4>
                        @Model.username @Model.usersurname
                        <br />
                        @Model.usernick<br />
                        @Model.useremail
                    </h4>

                </div>

            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <form id="contact-form" class="contact__form " method="post" enctype="multipart/form-data">
                        <!-- form message -->


                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>İsim</label>
                                    @Html.TextBoxFor(m => m.username, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Soyisim</label>
                                    @Html.TextBoxFor(m => m.usersurname, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Nick</label>
                                    @Html.TextBoxFor(m => m.usernick, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>E-Mail</label>
                                    @Html.TextBoxFor(m => m.useremail, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Şifre</label>
                                    @Html.TextBoxFor(m => m.userpassword, new { @class = "form-control", @type = "password" })
                                </div>
                            </div>
                            

                        </div>

                        <div class="text-center">
                            <input class="btn btn-main btn-round-full" name="submit" type="submit" value="Güncelle" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>



}
