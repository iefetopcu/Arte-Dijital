
@{
    ViewBag.Title = "KayitOl";
    Layout = "~/Views/Shared/BlogView.cshtml";
}

<section class="contact-form-wrap section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="section-title text-center">
                    <h2 class="text-md mb-2">Kayıt Ol</h2>
                    <div class="divider mx-auto my-4"></div>
                </div>
            </div>
        </div>
        @if (ViewBag.alert == "mail")
        {
            <div class="alert alert-danger" role="alert">
                Bu mail adresi kayıtlıdır !
            </div>
        }
        @if (ViewBag.alert == "sifre")
        {
            <div class="alert alert-danger" role="alert">
                Girilen Şifreler Eşleşmiyor !
            </div>
        }
        @if (ViewBag.alert == "nick")
        {
            <div class="alert alert-danger" role="alert">
                Girilen Nick Kullanılıyor !
            </div>
        }

        @if (ViewBag.alert == "ok")
        {
            <head>
                <meta http-equiv="refresh" content="2; url=@Url.Action("GirisYap","Blog")">
            </head>
            <div class="alert alert-success" role="alert">

                <div class="text-center">
                    Kullanıcı Oluşturuldu !<br /><br />
                    <a href="@Url.Action("GirisYap","Blog")">Giriş Yap</a>
                </div>
            </div>
        }

        @if (ViewBag.alert == "fotograf")
        {
            <div class="alert alert-danger" role="alert">
                Fotoğraf Formatı Jpeg, Gif ve ya PNG olmalıdır.
            </div>
        }

        @if (ViewBag.alert == "boyut")
        {
            <div class="alert alert-danger" role="alert">
                Fotoğraf Boyutu 5 MB'ı geçiyor...
            </div>
        }
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <form id="contact-form" class="contact__form " method="post" enctype="multipart/form-data">
                    <!-- form message -->


                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input name="username" id="name" type="text" class="form-control" placeholder="İsim" required>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <input name="usersurname" type="text" class="form-control" placeholder="Soyisim" required>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input name="useremail" type="email" class="form-control" placeholder="E-Mail" required>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input name="usernick" type="text" class="form-control" placeholder="Nick" required>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input name="userpassword" type="password" class="form-control" placeholder="Şifre" required minlength="8" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input name="userpasswordagain" type="password" class="form-control" placeholder="Şifre Tekrar" minlength="8" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                Profil Fotoğrafı
                                <input name="userphotourl" type="file" class="form-control" required />
                            </div>
                        </div>
                    </div>

                    <div class="text-center">
                        <input class="btn btn-main btn-round-full" name="submit" type="submit" value="Kayıt Ol" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


