
@{
    ViewBag.Title = "Teknoloji Bloğu - Arte Blog - GirisYap";
    ViewBag.Description = "Arte Blog İnternet Bloğu";
    Layout = "~/Views/Shared/BlogView.cshtml";
}

    <section class="contact-form-wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="section-title text-center">
                        <h2 class="text-md mb-2">Giriş Yap</h2>
                        <div class="divider mx-auto my-4"></div>

                    </div>
                </div>
            </div>
            @if (ViewBag.alert == "ok")
            {
        <head>
            <meta http-equiv="refresh" content="2; url=@Url.Action("Index","Blog")">
        </head>
                
                <div class="alert alert-success" role="alert">
                    Başarılı Giriş !
                </div>
            }

            @if (ViewBag.alert == "no")
            {
                <div class="alert alert-danger" role="alert">
                    E-Posta ya da şifre Hatalı !
                </div>
            }
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <form class="contact__form " method="post">
                        <!-- form message -->
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="useremail" id="useremail" type="text" class="form-control" placeholder="E-Mail">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="userpassword" id="password" type="password" class="form-control" placeholder="Şifre">
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <input class="btn btn-main btn-round-full" name="submit" type="submit" value="GİRİŞ YAP" />
                        </div>
                        <div class="row mt-5">
                            <div class="col-lg-6">
                                <div class="text-center">
                                    <a href="@Url.Action("KayitOl", "Blog")">Kayıt Ol</a>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="text-center">
                                    <a href="@Url.Action("SifremiUnuttum", "Blog")">Şifremi Unuttum</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
