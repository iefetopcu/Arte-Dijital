@model ArteDijital.Models.Entity.footermessage
@{
    ViewBag.Title = "FooterMesajOku";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Footer Mesaj Oku</span>

    </div>
</div>

<div class="card-body">
    <h5 class="card-title">
        @Model.name - @Model.email
    </h5>

    <p class="card-text d-inline-block mb-3">@Model.footerexplanation</p><br /><hr />
    <span class="text-muted">@Model.messagetime</span>
</div>
@if (@Model.isaktif == 1)
{
    <div class="row">
        <div class="col mb-4">
            <a href="@Url.Action("FooterMesajOkundu", "Admin" , new { id = Model.id })">
                <div class="bg-info rounded text-white text-center p-3" style="box-shadow: inset 0 0 5px rgba(0,0,0,.2);">Okundu Olarak İşaretle</div>
            </a>
        </div>
    </div>

}

@if (@Model.isaktif == 2)
{
    <div class="row">
        <div class="col mb-4">
            <a href="@Url.Action("FooterMesajOkunmadi", "Admin" , new { id = Model.id })">
                <div class="bg-info rounded text-white text-center p-3" style="box-shadow: inset 0 0 5px rgba(0,0,0,.2);">Okunmadı Olarak İşaretle</div>
            </a>
        </div>
    </div>

}
