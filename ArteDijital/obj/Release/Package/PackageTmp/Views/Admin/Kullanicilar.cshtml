@using ArteDijital.Models.Entity
@{
    ViewBag.Title = "Kullanicilar";
    Layout = "~/Views/Shared/Admin.cshtml";
}




<div class="row">
    @foreach (var kullanicilar in Model)
    {
        <div class="col-lg-4">
            <div class="card card-small mb-4 pt-3">
                <div class="card-header border-bottom text-center">
                    <div class="mb-3 mx-auto">
                        <img class="rounded-circle" src="@kullanicilar.userphotourl" alt="User Avatar" width="110" height="150">
                    </div>
                    <h4 class="mb-0">@kullanicilar.username @kullanicilar.usersurname</h4>
                    <span class="text-muted d-block mb-2">@kullanicilar.usernick</span>
                    <a href="@Url.Action("KullaniciSil", "Admin" , new { id = kullanicilar.id })" onclick="return confirm('Bu Kullanıcıyı Silmek İstediğinize Emin Misiniz?')">
                        <button type="button" class="mb-2 btn btn-sm btn-pill btn-outline-primary mr-2">
                            <i class="material-icons mr-1"></i>Sil
                        </button>

                    </a>
                    <a href="@Url.Action("KullaniciDuzenle", "Admin" , new { id = kullanicilar.id })">
                        <button type="button" class="mb-2 btn btn-sm btn-pill btn-outline-primary mr-2">
                            <i class="material-icons mr-1"></i>Düzenle
                        </button>

                    </a>
                    
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item px-4">
                        <div class="progress-wrapper">
                            <strong class="text-muted d-block mb-2 text-center">@kullanicilar.userrole.userrolename</strong>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    }

</div>




